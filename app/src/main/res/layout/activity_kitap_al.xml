<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitapAlActivity"
    android:padding="5dp"
    android:orientation="vertical">

<Button
    android:id="@+id/btQrCodeTara"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="QR Kod ile Öğrenci Ara"/>
    <Button
        android:id="@+id/btOgrenciBul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Öğrenci Bul"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOgrenci"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange">
            <TextView
                android:id="@+id/tvOgrId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="boş"
                android:visibility="gone"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvOgrenciAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Öğrenci Adı Soyadı"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTelNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Telefon Numarası"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOgrenciAdi" />

            <TextView
                android:id="@+id/tvOkulNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Okul Numarası ve Okul"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTelNo" />

            <Button
                android:id="@+id/btIptal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/teal_700"
                android:text="İptal"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
<!--
    <TextView
        android:id="@+id/tvOgrenciBilgisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Öğrenci Adı"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aldığı Kitaplar"/>
-->
    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvOgrenci"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>